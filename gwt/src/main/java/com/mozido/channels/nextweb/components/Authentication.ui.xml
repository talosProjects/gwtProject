<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.mozido.channels.nextweb.components.form.bootstrap"
             xmlns:c="urn:import:com.mozido.channels.nextweb.components"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
    <ui:style>
        .colorgraph {
            height: 5px;
            border-top: 0;
            background: #c4e17f;
            border-radius: 5px;
            display: block;
            background-image: -webkit-linear-gradient(left, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
            background-image: -moz-linear-gradient(left, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
            background-image: -o-linear-gradient(left, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
            background-image: linear-gradient(to right, #c4e17f, #c4e17f 12.5%, #f7fdca 12.5%, #f7fdca 25%, #fecf71 25%, #fecf71 37.5%, #f0776c 37.5%, #f0776c 50%, #db9dbe 50%, #db9dbe 62.5%, #c49cde 62.5%, #c49cde 75%, #669ae1 75%, #669ae1 87.5%, #62c2e4 87.5%, #62c2e4);
            opacity: 0.5;
        }
    </ui:style>
    <g:HTMLPanel>
        <c:Navigation authenticated="false"/>
        <div class="container">
            <div class="row" style="margin-top:70px">
                <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

                    <form role="form">
                        <fieldset>
                            <h2>Please Sign In</h2>
                            <hr class="{style.colorgraph}"/>
                            <div class="form-group">
                                <b:MzBootstrapTextBox type="TEXT" ui:field="login"
                                                      placeholder="Login" addStyleNames="input-lg"/>
                            </div>
                            <div class="form-group">
                                <b:MzBootstrapTextBox type="PASSWORD" ui:field="password"
                                                      placeholder="Password" addStyleNames="input-lg"/>
                            </div>
                            <div class="validationResults"/>
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="checkbox">
                                        <label>
                                            <g:CheckBox ui:field="rememberMe"/>&#160;Remember me
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <a href="" class="btn btn-link pull-right">Forgot Password?</a>
                                </div>
                            </div>
                            <hr class="{style.colorgraph}"/>
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <b:MzBootstrapButton type="SUCCESS" size="LARGE" block="true"
                                                         ui:field="submit">Sign In
                                    </b:MzBootstrapButton>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <b:MzBootstrapButton type="PRIMARY" size="LARGE" block="true"
                                                         ui:field="register">Register
                                    </b:MzBootstrapButton>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>