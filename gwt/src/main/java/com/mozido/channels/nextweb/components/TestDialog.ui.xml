<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.mozido.channels.nextweb.components.form.bootstrap"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
    <g:HTMLPanel>
        <blockquote>
            <p>This is dialog example. You can open child dialogs from here</p>
            <p>
                <g:InlineLabel ui:field="lastAction"/>
            </p>

        </blockquote>

        <dl class="dl-horizontal">
            <dt>
                <b:MzBootstrapButton ui:field="clientException">
                    <ui:msg description="Throw exception">Throw exception</ui:msg>
                </b:MzBootstrapButton>
            </dt>
            <dd>
                Example how application handle unchecked client exceptions
            </dd>
        </dl>
        <dl class="dl-horizontal">
            <dt>
                <b:MzBootstrapButton ui:field="dialog2Button">
                    <ui:msg description="Open">Open</ui:msg>
                </b:MzBootstrapButton>
            </dt>
            <dd>
                Example how dialogs handle history events
            </dd>
        </dl>

        <p class="text-right">
            <b:MzBootstrapButton ui:field="closeButton">
                <ui:msg description="Cancel">Cancel</ui:msg>
            </b:MzBootstrapButton>
        </p>
    </g:HTMLPanel>
</ui:UiBinder>